{% extends "::base.html.twig" %}


{% block body %}

    <h1 class="page-header">Nouveaux Articles</h1>

    <br/>
    <a href="{{ path('create') }}" class="btn btn-success btn-lg">+ Ajouter un Article</a>
    <br/><br/>

    {% for article in articles %}
        <div class="jumbotron">
            <div class="container">
                <h2>{{ article.title }}</h2>
                <p>{{ article.content | slice(0, 300) }} <a  href="{{ path('article_show', {'article': article.id}) }}" role="button"> [...]</a></p>
                <p><a class="btn btn-default btn-lg" href="{{ path('article_show', {'article': article.id}) }}" role="button">Lire Plus</a>
                    <a class="btn btn-primary btn-lg" href="{{ path('article_update', {'id': article.id}) }}" role="button">Modifier</a>
                    <a class="btn btn-danger btn-lg" href="{{ path('delete', {'id': article.id}) }}" role="button">Supprimer</a></p>
            </div>
        </div>
    {% endfor %}
{% endblock body %}