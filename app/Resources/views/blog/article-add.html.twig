{% extends "::base.html.twig" %}


{% block body %}
    <h1 class="page-header">Ajoutons article</h1>
    {{ form_start(form) }}

    {{ form_errors(form.title) }}

    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre de L\'article'}}) }}

        <br/>
        {{ form_widget(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Titre de L\'article'}}) }}
        <br/>
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Contenu de l\'article'}}) }}
        <br/>
        {{ form_row(form.image) }}
        <br/>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_end(form) }}
{% endblock body %}